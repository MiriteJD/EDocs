        <!--MainListArea-->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" >
            <DockPanel LastChildFill="False">
                <DockPanel MinHeight="400" DockPanel.Dock="Top" LastChildFill="True" VerticalAlignment="Stretch" Margin="0" >
                    <!--MainListToolBar-->
                    <Border Margin="0" DockPanel.Dock="Top"  BorderThickness="0,0,0,1">
                        <ToolBarTray  IsLocked="True">
                            <ToolBar  Name="TreeViewToolBar" OverflowMode="Never" >
                                <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch" ToolTip="Aufgabenliste hinzufügen">
                                    <Image DockPanel.Dock="Left" Height="16" Width="16" />
                                </Button>
                                <Button HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"  ToolTip="Aufgabenliste löschen">
                                    <Image  DockPanel.Dock="Left" Height="16" Width="16"  />
                                </Button>
                            </ToolBar>
                        </ToolBarTray>
                    </Border>

                    <!--MainList-->
                    <Border Margin="0" >
                        <ListView  />
                    </Border>
                </DockPanel>
                <Border DockPanel.Dock="Bottom" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Margin="5" Grid.Column="0" Text="Beschreibung" />
                        <TextBox Grid.Row="0" Grid.Column="1"  MaxLength="50"/>
                        <TextBlock Grid.Row="1" Margin="5" Grid.Column="0" Text="Bemerkung" />
                        <TextBox Grid.Row="1" Grid.Column="1"  MaxLines="4" MinLines="4" TextWrapping="Wrap" MaxLength="500" VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Border>
            </DockPanel>
        </Border>

        <!--TaskListArea-->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" >
            <DockPanel LastChildFill="True" >

                <!--TaskListToolBar-->
                <Border Margin="0" DockPanel.Dock="Top"  BorderThickness="0,0,0,1">
                    <ToolBarTray  IsLocked="True">
                        <ToolBar OverflowMode="Never" >
                            <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch" ToolTip="Dokument hinzufügen">
                                <Image  DockPanel.Dock="Left" Height="16" Width="16"  /> <!-- source -->
                            </Button>
                            <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch" ToolTip="Aufgabe löschen">
                                <Image  DockPanel.Dock="Left" Height="16" Width="16" />
                            </Button>
                            <Separator/>

                            <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"  ToolTip="Sortieren nach Erstellungsdatum">
                                <Image DockPanel.Dock="Left" Height="16" Width="16"  />
                            </Button>
                            <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"   ToolTip="Sortieren nach Name">
                                <Image  DockPanel.Dock="Left" Height="16" Width="16"  />
                            </Button>
                            <Button  HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"    ToolTip="Sortieren nach Fälligkeitsdatum">
                                <Image  DockPanel.Dock="Left" Height="16" Width="16"  />
                            </Button>
                            <Button HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"   ToolTip="Sortieren nach Priorität">
                                <Image DockPanel.Dock="Left" Height="16" Width="16" />
                            </Button>
                            <Button HorizontalContentAlignment="Stretch"
								VerticalAlignment="Stretch"  ToolTip="Sortieren nach Wichtigkeit">
                                <Image  DockPanel.Dock="Left" Height="16" Width="16"  />
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                </Border>

                <!--TaskList-->
                <Border Margin="0" >
                    <ListView />
                </Border>
            </DockPanel>
        </Border>

        <!--TaskDetailView-->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Margin="5" Grid.Column="0" Text="Beschreibung" />
                <TextBox Grid.Row="0" Grid.Column="1"  Text="BindingonDescription"  MaxLength="100"/>
                <TextBlock Grid.Row="1" Margin="5" Grid.Column="0" Text="Bemerkung" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="BindingonDocComment" MaxLines="4" MinLines="4" MaxLength="500" 
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                <TextBlock Grid.Row="2" Margin="5" Grid.Column="0" Text="Erstellungsdatum" />
                <TextBlock Grid.Row="2" Margin="5" Grid.Column="1" Text="BindingonDocCreationDate" />

                <StackPanel Grid.Row="3" Margin="5" Grid.Column="1"/>
                <TextBlock Grid.Row="6" Margin="5" Grid.Column="0" Text="Kategorien" />
                <ListView Grid.Row="6" Grid.Column="1" Margin="5" MinHeight="70" MaxHeight="150"  />
                <Button Margin="5" Grid.Row="7" Grid.Column="1" 
							HorizontalAlignment="Right" ToolTip="Kategorien verwalten">
                    <Image  HorizontalAlignment="Right" Height="24" Width="24"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
